{% block custom %}
{% endblock %}

{% block blog_content %}
    {% for post in posts %}
        {#img false#}
        <div class="post-article">
            <div class="article-date">
                <p>{{ post.postDate|date("M d") }}</p>
            </div>
            <div class="article-category">
                <p>
                    <a href="{{ path('category', {'id' : post.category.id, 'name' : post.category.name|replace ({' ': '_'})}) }}">
                        {{ post.category.name }}
                    </a>
                </p>
            </div>
            <div class="article-short-title">
                <p>{{ post.shortTitle }}</p>
            </div>
            <div class="article-short-description">
                <p>{{ post.shortDescriptions }}</p>
            </div>
            <div class="article-to-internal">
                <p>
                    <a href="{{ path('post', {'id' : post.id, 'shortTitle' : post.shortTitle|replace ({' ': '_'})}) }}">Read
                        more</a>
                </p>
            </div>
            <div class="article-tag">
                <ul>
                    {% for tag in post.tag %}
                        <li>
                            <a href="{{ path('tag', {'id' : tag.id, 'name' : tag.name|replace ({' ': '_'})}) }}">#{{ tag.name|join(' - ') }} {% if not loop.last %} , {% endif %} </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {#image true#}
    {% endfor %}

    <div class="navigation text-center">
        {{ knp_pagination_render(posts) }}
    </div>
{% endblock %}



