{% extends "BlogBundle::base.html.twig" %}

{% block body_top %}
    {% include 'BlogBundle:Components/_menu_page:_menu_blog.html.twig' %}
{% endblock %}

{% block body_user_content %}

    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}


    {% block fos_user_content %}
    {% endblock fos_user_content %}

{% endblock body_user_content %}


{% block body_left %}
{% endblock %}

{# don't overide this block ! #}
{% block body_right %}
    <div class="blog-item">
        <h2>Custom search</h2>
        search
    </div>

    <div class="blog-item">
        <h2>Category's</h2>
        {{ render(controller('BlogBundle:Blog:showCategory')) }}
    </div>

    <div class="blog-item">
        <h2>Tags</h2>
        {{ render(controller('BlogBundle:Blog:showTag')) }}
    </div>
{% endblock %}

{% block body_bottom %}
    {% include "BlogBundle:Components/_footer:_footer.html.twig" %}
{% endblock %}