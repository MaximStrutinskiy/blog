{% extends "BlogBundle:Page/_blog:_blog_content.html.twig" %}

{% block custom %}
    <h2>{{ tag.name }}</h2>
    <p>Hear you can see all Post with tag {{ tag.name }}, Sure you can see all our tags hear: </p>

    <ul>
        {% for oneTag in setTags %}

            <li>
                <a href="{{ path('tag', {'id' : oneTag.id, 'name' : tag.name|replace ({' ': '_'})}) }}">{{ oneTag.name|join(' - ') }} </a>
            </li>

        {% endfor %}
    </ul>

    {% if posts is empty %}
        No posts with this tag
    {% endif %}
{% endblock %}
